@model List<BookReviewWall.Infrastructure.Entities.Book>

@{
    ViewData["Title"] = "My Books";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">
            <i class="bi bi-collection"></i> My Books
        </h1>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Add New Book
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-book fs-1 d-block mb-3 text-muted"></i>
            <h4>You haven't added any books yet!</h4>
            <p class="text-muted">Start building your collection by adding your first book.</p>
            <a asp-action="Create" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle"></i> Add Your First Book
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var book in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-shadow">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">@book.Title</h5>
                                <span class="badge bg-success">
                                    <i class="bi bi-person-check"></i> Mine
                                </span>
                            </div>
                            <h6 class="card-subtitle mb-2 text-muted">by @book.Author</h6>

                            @if (!string.IsNullOrEmpty(book.Description))
                            {
                                <p class="card-text text-muted small">
                                    @(book.Description.Length > 100
                                                            ? book.Description.Substring(0, 100) + "..."
                                                            : book.Description)
                    </p>
                                        }

                            <div class="mb-3 mt-auto">
                                @if (book.Reviews.Any())
                                {
                                    <div class="d-flex align-items-center mb-2">
                                        <span class="text-warning me-2">
                                            @for (int i = 0; i < Math.Floor(book.AverageRating); i++)
                                            {
                                                <i class="bi bi-star-fill"></i>
                                            }
                                            @if (book.AverageRating % 1 >= 0.5)
                                            {
                                                <i class="bi bi-star-half"></i>
                                            }
                                            @for (int i = 0; i < (5 - Math.Ceiling(book.AverageRating)); i++)
                                            {
                                                <i class="bi bi-star"></i>
                                            }
                                        </span>
                                        <span class="badge bg-secondary">
                                            @book.AverageRating.ToString("0.0") / 5.0
                                        </span>
                                    </div>
                                    <small class="text-muted">
                                        <i class="bi bi-chat-left-text"></i> @book.ReviewCount review(s)
                                    </small>
                                }
                                else
                                {
                                    <span class="text-muted">
                                        <i class="bi bi-star"></i> No reviews yet
                                    </span>
                                }
                            </div>

                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@book.Id"
                                   class="btn btn-sm btn-outline-primary flex-grow-1">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                                <form asp-action="Delete" asp-route-id="@book.Id"
                                      method="post" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this book and all its reviews?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="card-footer text-muted bg-light">
                            <small><i class="bi bi-calendar3"></i> Added @book.DateAdded.ToString("MMM dd, yyyy")</small>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to All Books
            </a>
        </div>
    }
</div>

<style>
    .hover-shadow {
        transition: box-shadow 0.3s ease-in-out;
    }

        .hover-shadow:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
</style>