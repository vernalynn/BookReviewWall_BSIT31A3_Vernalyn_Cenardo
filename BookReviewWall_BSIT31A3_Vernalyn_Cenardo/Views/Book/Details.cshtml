@model BookReviewWall_BSIT31A3_Vernalyn_Cenardo.Models.BookDetailsViewModel
@{
    ViewData["Title"] = Model.Book.Title;
}

<div class="container mt-4">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Books</a></li>
            <li class="breadcrumb-item active">@Model.Book.Title</li>
        </ol>
    </nav>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Book Information Column -->
        <div class="col-lg-8">
            <!-- Book Details Card -->
            <div class="card shadow mb-4">
                <div class="card-body">
                    <h1 class="card-title display-5">@Model.Book.Title</h1>
                    <h5 class="text-muted mb-3">
                        <i class="bi bi-person"></i> by @Model.Book.Author
                    </h5>

                    <!-- Rating Display -->
                    @if (Model.Book.Reviews.Any())
                    {
                        <div class="mb-4">
                            <div class="d-flex align-items-center mb-2">
                                <span class="text-warning me-2 fs-3">
                                    @for (int i = 0; i < Math.Floor(Model.Book.AverageRating); i++)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    @if (Model.Book.AverageRating % 1 >= 0.5)
                                    {
                                        <i class="bi bi-star-half"></i>
                                    }
                                    @for (int i = 0; i < (5 - Math.Ceiling(Model.Book.AverageRating)); i++)
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                </span>
                                <div>
                                    <span class="fs-4 fw-bold">@Model.Book.AverageRating.ToString("0.0")</span>
                                    <span class="text-muted">/ 5.0</span>
                                </div>
                            </div>
                            <p class="text-muted">
                                <i class="bi bi-chat-left-text"></i> Based on @Model.Book.ReviewCount review(s)
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mb-4">
                            <i class="bi bi-info-circle"></i> No reviews yet. Be the first to review this book!
                        </div>
                    }

                    <!-- Description -->
                    @if (!string.IsNullOrEmpty(Model.Book.Description))
                    {
                        <h5>About this book</h5>
                        <p class="lead">@Model.Book.Description</p>
                    }
                    <hr />
                    <p class="text-muted">
                        <small><i class="bi bi-calendar3"></i> Added on @Model.Book.DateAdded.ToString("MMMM dd, yyyy")</small>
                    </p>
                </div>
            </div>

            <!-- Reviews List -->
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h4 class="mb-0">
                        <i class="bi bi-chat-left-text"></i> Reviews (@Model.Book.ReviewCount)
                    </h4>
                </div>
                <div class="card-body">
                    @if (Model.Book.Reviews.Any())
                    {
                        @foreach (var review in Model.Book.Reviews.OrderByDescending(r => r.DateReviewed))
                        {
                            <div class="border-bottom pb-3 mb-3">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="mb-1">
                                            <i class="bi bi-person-circle"></i> @review.ReviewerName
                                        </h6>
                                        <div class="text-warning">
                                            @for (int i = 0; i < review.Rating; i++)
                                            {
                                                <i class="bi bi-star-fill"></i>
                                            }
                                            @for (int i = review.Rating; i < 5; i++)
                                            {
                                                <i class="bi bi-star"></i>
                                            }
                                            <span class="text-dark ms-2">(@review.Rating/5)</span>
                                        </div>
                                    </div>
                                    <small class="text-muted">
                                        @review.DateReviewed.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                                @if (!string.IsNullOrEmpty(review.Comment))
                                {
                                    <p class="mb-0">@review.Comment</p>
                                }
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">
                            <i class="bi bi-chat-left fs-1 d-block mb-2"></i>
                            No reviews yet for this book.
                        </p>
                    }
                </div>
            </div>
        </div>

        <!-- Add Review Form Column -->
        <div class="col-lg-4">
            <div class="card shadow sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Write a Review
                    </h5>
                </div>
                <div class="card-body">
                    @if (User.Identity!.IsAuthenticated)
                    {
                        @if (Model.HasUserReviewed)
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-check-circle"></i> You've already reviewed this book.
                            </div>
                        }
                        else
                        {
                            <form asp-action="AddReview" method="post">
                                <input type="hidden" asp-for="NewReview.BookId" />
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                                <div class="mb-3">
                                    <label asp-for="NewReview.ReviewerName" class="form-label">Your Name</label>
                                    <input asp-for="NewReview.ReviewerName" class="form-control" placeholder="Enter your name" />
                                    <span asp-validation-for="NewReview.ReviewerName" class="text-danger small"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="NewReview.Rating" class="form-label">Rating</label>
                                    <select asp-for="NewReview.Rating" class="form-select">
                                        <option value="">Select rating...</option>
                                        <option value="5">⭐⭐⭐⭐⭐ (5 - Excellent)</option>
                                        <option value="4">⭐⭐⭐⭐ (4 - Good)</option>
                                        <option value="3">⭐⭐⭐ (3 - Average)</option>
                                        <option value="2">⭐⭐ (2 - Poor)</option>
                                        <option value="1">⭐ (1 - Terrible)</option>
                                    </select>
                                    <span asp-validation-for="NewReview.Rating" class="text-danger small"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="NewReview.Comment" class="form-label">Your Review (Optional)</label>
                                    <textarea asp-for="NewReview.Comment" class="form-control" rows="4"
                                              placeholder="Share your thoughts about this book..."></textarea>
                                    <span asp-validation-for="NewReview.Comment" class="text-danger small"></span>
                                </div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-send"></i> Submit Review
                                    </button>
                                </div>
                            </form>
                        }
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-lock fs-1 text-muted"></i>
                            <p class="mt-2">Please login to write a review.</p>
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary w-100">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Back Button -->
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary w-100">
                    <i class="bi bi-arrow-left"></i> Back to Books
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
